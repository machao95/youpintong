.row {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.row-center {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.row-between {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.row-around {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}

.row-end {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
}

.column {
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.column-center {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.column-around {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.column-between {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}
