
@import "../../styles/layout.wxss";
@import "../../styles/variable.wxss";

.news-item {
  padding: 10rpx;
  margin-bottom: 10rpx;
  border-bottom: 1px solid var(--color-border);
}
.news-body {
  padding-bottom: 10rpx;
}
.news-content {
  flex: 1;
  padding-right: 20rpx;
}
.news-title {
  width: 100%;
  font-size: var(--fontSize-lg);
  margin-bottom: 10rpx;
}
.news-date {
  width: 100%;
  font-size: var(--fontSize-sm);
  color: #999;
}
.news-img {
  width: 200rpx;
  height: 150rpx;
}

.news-footer {
  width: 96%;
}
.news-op {
  color: #999;
}
.news-op text {
  color: #999;
  padding-left: 10rpx;
  font-size: var(--fontSize-xs);
}

.first-news {
  border-bottom: 1px solid var(--color-border);
  margin-bottom: 10rpx;
  padding-bottom: 10rpx;
}
.first-title {
  font-size: var(--fontSize-xxl);
  margin-bottom: 5rpx;
  font-weight: bold;
}
.first-image {
  width: 100%;
  height: 300rpx;
}
.first-desc {
  font-size: var(--fontSize-sm);
  color: #999;
  margin-bottom: 10rpx;
}



