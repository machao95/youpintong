
page {
  background: var(--color-bg-gray);
}

.container {
  /* margin: 20rpx; */
  margin-top: 10rpx;
}

.main-pic {
  width: 100%;
  margin-bottom: 10rpx;
}

.card {
  margin-bottom: 20rpx;
  background: #ffffff;
  padding: 20rpx;
  /* margin: 20rpx;
  border-radius: 10rpx; */
}

.price-box {
  margin-bottom: 20rpx;
}
.price-now-num {
  color: red;
  font-size: var(--fontSize-xxl);
  padding-right: 10rpx;
  font-weight: bold;
}
.price-origin {
  font-size: var(--fontSize-xs);
  color: #999;
}
.price-origin-num {
  text-decoration: line-through;
  padding-left: 10rpx;
}
.title {
  font-weight: bold;
  font-size: var(--fontSize-xl);
}

.desc {
  color: #666;
}
.desc text {
  color: #696969
}
.pr15 {
  padding-right: 15rpx;
}
.line {
  margin: 0 15rpx;
  width: 0;
  height: var(--fontSize-normal);
  border-left: 1px solid #696969;
}

.detail-title-box {
  margin-bottom: 15rpx;
}
.title-line {
  width: 100rpx;
  height: 0;
  border-bottom: 1px solid #999;
}
.detail-title {
  color: #696969;
  padding: 0 10rpx;
}

.detail-image-box {
  overflow: hidden;
}
.detail-image-box image {
  width: 100%;
  margin-bottom: 0;
}

.footer-box {
  height: 110rpx;
}
.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #FFF;
  border-top: 1px solid var(--color-border);
}

.op {
  flex: 1;
  padding: 0 20rpx 0 40rpx;
  height: 100%;
}
.icon {
  margin-right: 20rpx;
}
.icon-text {
  font-size: var(--fontSize-xs);
}

.btns {

}

.btn {
  padding: 30rpx 40rpx;
  color: #fff;
}

.toCar {
  background: var(--color-warn)
}
.buy {
  background: red
}

.param-panel {
  padding: 20rpx;
}
.param-title {
  font-size: var(--fontSize-xl);
  text-align: center;
  margin-bottom: 40rpx;
}
.param-item {
  padding: 40rpx 0;
  border-bottom: 1px solid var(--color-border);
}
.param-label {
  width: 200rpx;
  color: #999;
}
