
page {
  background: var(--color-bg-gray);
}

.a-body {
  background: #FFFFFF;
  margin-bottom: 20rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.a-image {
  width: 60rpx;
  height: 60rpx;
  background: #ff6b6b;
  border-radius: 50%;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
}

.a-content {
  flex: 1;
  padding-left: 20rpx;
}

.a-name {
  padding-right: 10rpx;
}
.a-phone {
  font-size: var(--fontSize-xs);
  color: #999;
}
.a-detail {
  margin-top: 10rpx;
}


.content {
  padding: 20rpx;
  background: #FFFFFF;
}

.items-box {
  margin: 20rpx 20rpx;
}
.item {
  margin-bottom: 30rpx;
}
.name {
  color: #333;
  width: 160rpx;
}
.value {
  flex: 1;
  color: #999;
}
.extra {
  color: #696969;
}
.input-remark {
  height: 100rpx;
  border: 1px solid var(--color-border);
  padding: 10rpx;
  color: #696969;
}
.price {
  color: red;
  font-size: var(--fontSize-lg);
}

.footer-box {
  height: 110rpx;
}
.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #FFF;
  border-top: 1px solid var(--color-border);
}
.desc {
  color: #999;
  padding-right: 20rpx;
}
.btn {
  padding: 30rpx 40rpx;
  color: #fff;
}
.cancel {
  background: var(--color-warn)
}
.submit {
  background: red
}
