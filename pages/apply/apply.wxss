.page-apply {
  padding: 40rpx 30rpx;
}
.big-title {
  font-weight: bold;
  font-size: 40rpx;
  padding: 15rpx 0;
  margin-bottom: 10rpx;
}

.add-link {
  padding: 10rpx 0;
  text-align: center;
  border: 1px dashed var(--color-info);
  color: var(--color-info);
  font-size: var(--fontSize-normal);
  margin-bottom: 30rpx;
}

.link-info-box {
  padding: 20rpx 20rpx 0;
  border: 1px solid var(--color-border);
  margin-bottom: 40rpx;
  position: relative;
}
.link-info-item {
  margin-bottom: 15rpx;
  color: #696969;
}
.link-info-operation {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.link-info-operation-name {
  font-size: var(--fontSize-xs);
  color: var(--color-info);
}
.link-info-operation-icon {
  font-size: var(--fontSize-lg);
  color: var(--color-info);
}

.apply-file {
  padding-bottom: 10rpx;
  overflow: hidden;
}
.file-label {
  font-size: var(--fontSize-normal);
  margin-bottom: 10rpx;
}
.required {
  color: var(--color-danger);
}

.image-box {
  width: 100rpx;
  height: 100rpx;
  float: left;
  position: relative;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  border: 1px solid var(--color-border);
}
.image-box image {
  width: 100%;
  height: 100%;
}
.close {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  border: 1px solid red;
  border-radius: 50%;
}
