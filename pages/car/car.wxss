@import '../../templates/empty/empty.wxss';
page {
  background: var(--color-bg-gray);
}

.panel {
  margin: 20rpx;
  background: #FFFFFF;
  border-radius: 10rpx;
  overflow: hidden;
  padding: 20rpx;
}

.panel-header {
  padding-bottom: 20rpx;
  border-bottom: 1px solid var(--color-border);
}
.panel-body {
  padding-top: 20rpx;
}

.goods-item {
  margin-bottom: 20rpx;
}

.check {
  padding-right: 20rpx;
}



.other-title-box {
  margin-bottom: 15rpx;
}
.title-line {
  width: 100rpx;
  height: 0;
  border-bottom: 1px solid #999;
}
.other-title {
  color: #696969;
  padding: 0 10rpx;
}

.guess-image {
  width: calc((100vw - 120rpx) / 2);
  height: calc((100vw - 120rpx) / 2);
  margin-bottom: 30rpx;
}

.guess-line {
  border-left: 1px solid var(--color-border);
  width: 0;
  height: calc((100vw - 180rpx) / 2);
}

.footer-box {
  height: 110rpx;
}
.footer {
  position: fixed;
  bottom: 0;
  padding-left: 40rpx;
  width: 100%;
  background: #FFF;
  border-top: 1px solid var(--color-border);
}

.btn-remove {
  margin: 20rpx 40rpx;
  padding: 8rpx 30rpx;
  border: 1px solid #ff6b6b;
  color: #ff6b6b;
  border-radius: 40rpx;
}
.btn-pay {
  padding: 30rpx 60rpx;
  color: #fff;
  background: #ff6b6b;
}
.total {
  color: #696969;
  padding-right: 20rpx;
}
.price {
  color: #c00;
}
