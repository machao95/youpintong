
page {
  background: var(--color-bg-gray);
}

.list {
  margin: 20rpx;
}

.a-item {
  background: #FFFFFF;
  border-radius: 10rpx;
  overflow: hidden;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.a-body {
  width: 100%;
  padding-bottom: 20rpx;
  border-bottom: 1px solid var(--color-border);
}

.a-image {
  width: 60rpx;
  height: 60rpx;
  background: #ff6b6b;
  border-radius: 50%;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
}

.a-content {
  flex: 1;
  padding-left: 20rpx;
}

.a-name {
  padding-right: 10rpx;
}
.a-phone {
  font-size: var(--fontSize-xs);
  color: #999;
}
.a-detail {
  margin-top: 10rpx;
}
.a-footer {
  padding-top: 20rpx;
}
.a-default {
  font-size: var(--fontSize-sm);
  padding-left: 10rpx;
}
.a-default-text {
  font-size: var(--fontSize-sm);
  color: #999;
  padding-left: 10rpx;
}
.is-default {
  color: green;
}
.a-edit, .a-delete {
  padding-left: 40rpx;
  font-size: var(--fontSize-sm);
  color: #999;
}

.add-btn {
  width: 90%;
  padding: 20rpx 0;
  text-align: center;
  background: #ff6b6b;
  color: #FFFFFF;
  margin: 40rpx auto;
  border-radius: 50rpx;
}
