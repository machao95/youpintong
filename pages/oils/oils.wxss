
.container {
  margin: 20rpx;
}

.filter-header {
  padding-bottom: 10rpx;
  border-bottom: 1px solid var(--color-border);
  margin-bottom: 20rpx;
}

.filter-panel {
  overflow: hidden;
  margin-bottom: 20rpx;
  height: 0;
}
.panel-close {
  display: none;
}
.panel-open {
  display: block;
}

.filter-title {
  color: #999;
  font-size: var(--fontSize-sm);
  margin-bottom: 20rpx;
}

.options-box {
  margin-bottom: 20rpx;
}

.option-item {
  padding: 10rpx 50rpx;
  border-radius: 60rpx;
  border: 1px solid var(--color-border);
  margin-right: 20rpx;
}

.option-active {
  background: #ff6b6b;
  color: #fff;
  border: 1px solid #ff6b6b;
}