.page-appeal {
  padding: 40rpx 30rpx;
}
.big-title {
  font-weight: bold;
  font-size: 40rpx;
  padding: 15rpx 0;
  margin-bottom: 10rpx;
}
.image-label {
  font-size: var(--fontSize-normal);
  margin-bottom: 20rpx;
}
.image-content {
  padding: 20rpx 0;
  clear: both;
  overflow: hidden;
}
.image-box {
  width: 120rpx;
  height: 120rpx;
  float: left;
  position: relative;
  margin-right: 40rpx;
  margin-bottom: 40rpx;
  border: 1px solid var(--color-border);
}
.image-box image {
  width: 100%;
  height: 100%;
}
.close {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  border: 1px solid red;
  border-radius: 50%;
}
