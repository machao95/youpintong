
<view class="page-validate">

    <block wx:if="{{!$.userInfo.bindStatus}}">
        <input-item
            type="text"
            name="name"
            value="{{formValue.name}}"
            label="姓名"
            placeholder="请输入真实姓名"
            bindchange="handleFormItemChange"
        />

        <input-item
            type="text"
            name="idno"
            value="{{formValue.idno}}"
            label="身份证号"
            placeholder="请输入身份证号码"
            bindchange="handleFormItemChange"
        />
    </block>

    <input-item
        type="text"
        name="phone"
        value="{{formValue.phone}}"
        label="手机号"
        placeholder="请输入手机号码"
        bindchange="handleFormItemChange">
        <view class="{{countdown === 0 ? 'num-btn able-btn' : 'num-btn disabled-btn'}}"
              bindtap="getValidateNum"
        >
            {{countdown === 0 ? '获取验证码' : (countdown + '秒后可获取')}}
        </view>
    </input-item>

    <input-item
        type="text"
        name="validateNum"
        value="{{formValue.validateNum}}"
        label="验证码"
        placeholder="请输入获取的验证码"
        bindchange="handleFormItemChange"
    />

    <view class="bind-btn" bindtap="handleBind">立即绑定</view>

</view>

<van-notify id="validate" />

