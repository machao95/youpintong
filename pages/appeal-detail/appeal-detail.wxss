.page-detail {
  padding: 40rpx 30rpx;
}
.big-title {
  font-weight: bold;
  font-size: 40rpx;
  padding: 15rpx 0;
  margin-bottom: 10rpx;
}
.info-box {
  border: 1px solid var(--color-border);
  padding: 30rpx;
  border-radius: 4px;
  overflow: hidden;
  flex-wrap: wrap;
}
.image-box {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
  border: 1px solid var(--color-border);
}
.image-box image {
  width: 100%;
  height: 100%;
}
